  <script>
    // التنقل بين الأقسام
    function showSection(sectionId) {
      document.querySelectorAll('main section').forEach(sec => {
        sec.classList.remove('active');
      });
      document.getElementById(sectionId).classList.add('active');
    }

    // برمجة آلة الحاسبة
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('gapCalculator');
      const resultDiv = document.getElementById('result');

      if (form) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          const maleSalary = parseFloat(document.getElementById('maleSalary').value);
          const femaleSalary = parseFloat(document.getElementById('femaleSalary').value);

          if (isNaN(maleSalary) || isNaN(femaleSalary)) {
            resultDiv.textContent = "الرجاء إدخال قيم صحيحة.";
            return;
          }

          const gap = ((maleSalary - femaleSalary) / maleSalary) * 100;
          resultDiv.textContent = `نسبة الفجوة في الأجور: ${gap.toFixed(2)}٪`;
        });
      }
    });
  </script>

